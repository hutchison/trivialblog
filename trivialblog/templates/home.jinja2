{% extends "basic.jinja2" %}

{% from 'macros.jinja2' import 
  btn_add_post,
  btn_add_user,
  btn_edit_user,
  btn_login,
  btn_logout,
%}

{% block navbarbuttons %}
{% if 'editors' in groups %}
  {{ btn_add_post(request.route_url('add.post')) }}
{% endif %}

{% if 'admins' in groups %}
  {{ btn_add_user(request.route_url('add.user')) }}
  {{ btn_edit_user(request.route_url('edit.user')) }}
{% endif %}
{% endblock %}

{% block loginbutton %}
{% if logged_in %}
  {{ btn_logout(request.route_url('logout'), logged_in) }}
{% else %}
  {{ btn_login(request.route_url('login')) }}
{% endif %}
{% endblock %}

{% block context %}
  {% for p in posts %}
  <article>
    <h2>
      <a href="{{ request.route_url('view.post', id=p.id) }}">
        {{ p.headline|safe }}
      </a>
    </h2>
    <p><small>{{ p.pdate.strftime("%A, %d. %B %Y") }}</small></p>
    {{ p.content|markdown|safe }}
  </article>
  {% endfor %}
{% endblock %}
