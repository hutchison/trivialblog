{% macro btn_add_post(target) %}
<li class="divider-vertical"></li>
<li>
  <button
    class="btn btn-success btn-small"
    onclick="window.location.href='{{ target }}'"
  >
    <i class="icon-pencil"></i> neuer Post
    </button>
  </li>
{% endmacro %}

{% macro btn_add_user(target) %}
<li class="divider-vertical"></li>
<li>
  <button
    class="btn btn-success btn-small"
    onclick="window.location.href='{{ target }}'"
  >
    <i class="icon-plus"></i>
    <i class="icon-user"></i>
  </button>
</li>
{% endmacro %}

{% macro btn_edit_user(target) %}
<li class="divider-vertical"></li>
<li>
  <button
    type="submit"
    class="btn btn-small btn-warning"
    onclick="window.location.href='{{ target }}'"
  >
    <i class="icon-pencil"></i>
    <i class="icon-user"></i>
  </button>
</li>
{% endmacro %}

{% macro btn_edit_post(target) %}
