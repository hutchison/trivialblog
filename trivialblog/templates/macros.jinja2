{% macro btn_login(target) %}
<a
  class="btn btn-primary btn-small pull-right"
  href="{{ target }}"
>
  <i class="icon-user"></i> Login
</a>
{% endmacro %}

{% macro btn_logout(target, username) %}
<a 
  class="btn btn-primary btn-small pull-right"
  href="{{ target }}"
>
  {{ username }} <i class="icon-remove"></i>
</a>
{% endmacro %}

{% macro status_alert(text, type) %}
<div class="row">
  <div class="alert alert-{{ type }} span5">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ text }}
  </div>
</div>
{% endmacro %}
